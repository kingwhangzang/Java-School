class Pen
{
	String color;
	int price;

	public Pen() { //값이 오픈 되어 있어야 하니까 public, return값이 없어서 void
	}

	public Pen(String c) {
		color = c; //생성자의 초기화
	}
	public Pen(int p) {
		price = p;
	}
	public Pen(String c, int p){
		color = c;
		price = p;
	}

	public static void write() 
	{
		System.out.println("Pen : write()");
	}
	public void erase() {
		System.out.println("Pen: erase()");
	}
}
